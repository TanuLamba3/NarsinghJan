        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/black" />

    </LinearLayout>
</RelativeLayout>